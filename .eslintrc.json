{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "io": "readonly",
    "msal": "readonly",
    "L": "readonly",
    "state": "readonly",
    "formatDateStr": "readonly",
    "showToast": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "curly": ["error", "multi-line"],
    "no-throw-literal": "error",
    "no-return-await": "warn",
    "require-await": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js"
  ]
}

